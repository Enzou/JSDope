extends layouts/main


//- check and list entries in list of available tools. If there are none, an error message is shown
mixin obf_list(lst, name)
    if lst && lst.length
        ul(id="#{name}" class="obf_list")
            each tool in lst
                li
                    label #[input(type="checkbox")] #{tool}
    else
        p No #{name} available


block content
    h1= title
    p Welcome to #{title}, #{name}

    +obf_list(obfuscators, 'obfuscators')
    +obf_list(deobfuscators, 'deobfuscators')

    input(type='button', value='Send request', class="btn btn-primary", onclick='processFn()')

    div(id="result_area")
        h3 Result

        p(id="obfuscated_code")

        label(for="compression") Kompressionsrate:
        span(id="compression", class="result_info")
        br
        label(for="time") ben√∂tigte Zeit:
        span(id="time", class="result_info")


